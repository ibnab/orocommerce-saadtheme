
{% block _logo_widget %}
{% set attr = layout_attr_defaults(attr, {
    '~class': " pull-left"
}) %}

<div {{ block('block_attributes') }}>
    {# In home page #}
    <div class='logo-center-mobile'>
    {% if app.request.attributes.get('_route') == 'oro_frontend_root' %}
        <img
            src="{% image '@IbnabSaadBundle/Resources/public/saad/images/logo/saad-logo.svg' %}{{ asset_url }}{% endimage %}"
            class="logo"
            alt="logo"
        >
    {% else %}
        <a href="{{ path('oro_frontend_root') }}" class="logo" style="background: url('{% image '@IbnabSaadBundle/Resources/public/saad/images/logo/saad-logo.svg' %}{{ asset_url }}{% endimage %}') no-repeat;">OROCommerce</a>
    {% endif %}
    </div>
</div>
 
{% endblock %}
